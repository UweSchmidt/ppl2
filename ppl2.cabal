name:                ppl2
version:             0.1.0.0
synopsis:            An example language for manipulating pictures
-- description:         
license:             MIT
license-file:        LICENSE
author:              Uwe Schmidt
maintainer:          si@fh-wedel.de
copyright:           Uwe Schmidt
category:            Language
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable ppl2
  main-is:
          PPL2.hs
          
  other-modules:
                PPL2.ALU.Types
                PPL2.ALU.IntegerArithmUnit
                PPL2.ALU.MicroOps
                PPL2.Control.Instructions
                PPL2.Control.Loop
                PPL2.Control.MicroOps
                PPL2.Control.Types
                PPL2.Machines.Prelude
                PPL2.Machines.TaggedInt
                PPL2.Machines.UntaggedInt
                PPL2.Memory.CodeSeg
                PPL2.Memory.RTS
                PPL2.Memory.Segment
                PPL2.Memory.Stack
                PPL2.Memory.State
                PPL2.Pretty.Instr
                PPL2.Prim.Instr
                PPL2.Prim.Prelude
                PPL2.Prim.Values
                                
  -- other-extensions:    
  build-depends:       base >=4.7
                     , array      >=0.4
                     , bytestring
                     , containers
                     , directory
                     , filepath
                     , lens       >= 4.13
                     , mtl        >= 2.2.1
                     , vector     >= 0.10

  hs-source-dirs:      src

  -- hs-source-dirs:      
  default-language:    Haskell2010
